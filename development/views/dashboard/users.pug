extends ../templates/layout

block content
    main
        section.dashboard
            include ../modules/dashboard-nav
            div.users
                if errorMessage
                    div.row.center-xs.container
                        div.col-xs-12.col-sm-12.col-md-8.error
                            span #{errorMessage}
                div.row.center-xs.container
                    div.col-xs-12.col-md-8
                        each user in userDetails
                            div.row.middle-xs.grey
                                div.col-sm-4.image
                                    img(src='/img/blueberry.jpg')
                                div.col-xs-9.col-sm-6
                                    h3 #{user.firstName} #{user.lastName}
                                    ul
                                        li
                                            span.fa.fa-envelope
                                            span #{user.email}
                                        if user.phoneNumber !== ''
                                            li
                                                span.fa.fa-phone
                                                span #{user.phoneNumber}
                                div.col-xs-3.col-sm-2
                                    a(href='/admin/dashboard/edit-user/' + user.id + '/' + user.email) Edit
                    div.col-xs-12.col-md-8
                        span.flex.end
                                a(href='/admin/dashboard/add-user').button.pink Add