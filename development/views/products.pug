extends layout

block content
    main
        section.products
            header.row.container
                div.col-xs-6
                    h1 All Products
            div.row.container
                each product in products 
                    div.col-xs-12.col-sm-6.col-md-3
                        div.product
                            img(src=product.image1)
                            h3 #{product.title}
                            p #{product.description}
                            a(href='/product/' + product.id) Learn More
