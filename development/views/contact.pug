extends templates/layout

block content
    main
        section.contact
            div.row.center-xs.container
                div.col-xs-12.col-md-8
                    h1 Contact Us
                    form(action='/contact' method='post').row
                        span.col-xs-12.col-md-6
                            label(for='firstName') First Name
                            input(type='text' name='firstName' placeholder='First Name' max='45' require)
                        span.col-xs-12.col-md-6
                            label(for='lastName') Last Name
                            input(type='text' name='lastName' placeholder='Last Name' max='45' required)
                        span.col-xs-12.col-md-6
                            label(for='email') Email
                            input(type='email' name='email' placeholder='Email' max='45' require)
                        span.col-xs-12.col-md-6
                            label(for='phoneNumber') Phone Number
                            input(type='tel' name='phoneNumber' placeholder='Phone Number' max='45')
                        span.col-xs-12
                            label(for='message') Message
                            textarea(type='text' name='message' placeholder='Message' maxlength='1024' rows='5' require)
                            button(type='submit').button.gold Submit