extends templates/layout

block content
    main
        section.shopping-cart
            if errorMessage
                div.row.center-xs.container
                    div.col-xs-12.col-sm-12.col-md-8.error
                        span #{errorMessage}
            header.row.center-xs.container
                div.col-xs-12.col-md-8
                    h1 Shopping Cart
            form(action='/user/update-shopping-cart' method='post')
                span.row.center-xs.container
                    span.col-xs-12.col-md-8
                        each product in cart
                            span.row.middle-xs.grey
                                span.col-sm-4.image
                                    img(src='/img/' + product.image1)
                                span.col-xs-12.col-sm-8
                                    span.row
                                        span.col-xs-12.col-sm-8
                                            h3 #{product.title}
                                            p #{product.excerpt}
                                        span.col-xs-12.col-sm-4
                                            label Action
                                            select(name='action')
                                                option(selected='true' disabled='true') -- Select --
                                                option(value='remove') Remove
                                        span.col-xs-12
                                            span.details
                                                span.row.middle-xs
                                                    span.col-xs-12.col-sm-4.detail
                                                        strong Price:
                                                        span $#{product.price}
                                                    span.col-xs-12.col-sm-4.detail
                                                        span.flex
                                                            strong Quantity:
                                                            input(type='number' name='quantity' min='1' placeholder='0' value=product.quantity)
                                                    span.col-xs-12.col-sm-4.detail
                                                        strong Total:
                                                        span $#{product.subtotal}
                    //- span.col-xs-12.col-md-8
                    //-     span.row.middle-xs.grey
                    //-         span.col-xs-12
                    //-             span.row.middle-xs
                    //-                 span.col-xs-12.col-sm-3.detail
                    //-                     strong Sub-total:
                    //-                     span $#{orderDetails[0].subtotal}
                    //-                 span.col-xs-12.col-sm-3.detail
                    //-                     strong Tax:
                    //-                     span $#{orderDetails[0].tax}
                    //-                 span.col-xs-12.col-sm-3.detail
                    //-                     strong Shipping:
                    //-                     span $#{orderDetails[0].shipping}
                    //-                 span.col-xs-12.col-sm-3.detail
                    //-                     strong Total:
                    //-                     span $#{orderDetails[0].total}
                span.row.center-xs.container
                    span.col-xs-12.col-md-8
                        span.row
                            span.col-xs
                                button(type='submit').button.gold Update
                                a(href='/user/checkout').button.pink Continue
                            span.col-xs.right
                                button(type='reset').button.brown Reset